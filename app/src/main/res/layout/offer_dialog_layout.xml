<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:focusableInTouchMode="true"
        android:id="@+id/linearLayout2">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:paddingLeft="16dp"
                android:layout_width="@dimen/offer_request_text_label_width"
                android:layout_height="@dimen/offer_request_text_label_height"
                android:gravity="center_vertical"
                android:layout_marginTop="10dp"
                android:text="Teklif Miktarı" />

            <EditText
                android:id="@+id/dialog_offer_price"
                android:maxLength="8"
                android:inputType="number"
                style="@style/DentalMarket.EditText"
                android:hint="Teklif Miktarını Giriniz"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:paddingLeft="16dp"
                android:layout_width="@dimen/offer_request_text_label_width"
                android:layout_height="@dimen/offer_request_text_label_height"
                android:gravity="center_vertical"
                android:layout_marginTop="10dp"
                android:text="Para Birimi" />

            <Spinner
                android:id="@+id/dialog_offer_currency"
                android:layout_width="fill_parent"
                android:layout_height="match_parent"
                android:layout_marginBottom="10dp"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:paddingLeft="16dp"
                android:layout_width="@dimen/offer_request_text_label_width"
                android:layout_height="@dimen/offer_request_text_label_height"
                android:gravity="center_vertical"
                android:layout_marginTop="10dp"
                android:text="Açıklama" />

            <EditText
                android:id="@+id/dialog_offer_desc"
                android:maxLength="200"
                style="@style/DentalMarket.EditText"
                android:hint="Açıklama Giriniz"/>
        </LinearLayout>
    </LinearLayout>


</RelativeLayout>